server {
        listen 80 default_server;
        listen [::]:80 default_server;
        server_name www.posthaste.pro;
        return 301 https://www.posthaste.pro$request_uri;
}

server {
        listen 443 ssl default_server;
        listen [::]:443 ssl default_server;

        server_name www.posthaste.pro;

        location / {
            try_files $uri $uri/ =404;
            root /var/www/html;
            index index.html;
        }
        location /.git {
           deny all;
           return 404;
        }

        location /ner/ {
           proxy_pass http://192.168.27.1/;
        }

        ssl_certificate /etc/letsencrypt/live/www.posthaste.pro/fullchain.pem;
        ssl_certificate_key /etc/letsencrypt/live/www.posthaste.pro/privkey.pem;
}
